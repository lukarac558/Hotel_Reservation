<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#0126F8"
        app:strokeWidth="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/hrCountryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="Country,"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/hrHotelImageView"
                app:layout_constraintTop_toBottomOf="@+id/hrHotelNameTextView" />

            <TextView
                android:id="@+id/hrHotelNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:text="HotelName"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/hrHotelImageView"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/hrDeleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="6dp"
                android:minWidth="120dp"
                android:minHeight="40dp"
                android:text="UsuÅ„ hotel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/hrHotelImageView"
                android:layout_width="128dp"
                android:layout_height="154dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:srcCompat="@tools:sample/avatars" />


            <RatingBar
                android:id="@+id/hrStarsRatingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.1"
                app:layout_constraintStart_toEndOf="@+id/hrHotelNameTextView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/hrCityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="10dp"
                android:text="City"
                app:layout_constraintStart_toEndOf="@+id/hrCountryTextView"
                app:layout_constraintTop_toBottomOf="@+id/hrHotelNameTextView" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toEndOf="@+id/hrHotelImageView"
                app:layout_constraintTop_toBottomOf="@+id/hrCountryTextView"
                app:srcCompat="@drawable/food_type_icon" />

            <TextView
                android:id="@+id/hrFoodTextView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                android:singleLine="false"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/imageView19"
                app:layout_constraintTop_toBottomOf="@+id/hrCountryTextView" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="O hotelu"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/hrHotelImageView"
                app:layout_constraintTop_toBottomOf="@+id/hrFoodTextView" />

            <TextView
                android:id="@+id/hrDescriptionTextView"
                android:layout_width="260dp"
                android:layout_height="48dp"
                android:maxLines="4"
                android:paddingLeft="8dp"
                android:singleLine="false"
                android:text="Miejsce na opis hotelu."
                android:textSize="9sp"
                app:layout_constraintStart_toEndOf="@+id/hrHotelImageView"
                app:layout_constraintTop_toBottomOf="@+id/textView24" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>